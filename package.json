{
  "name": "lukeclark",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^24.0.0",
    "pnpm": "10.24.0"
  },
  "packageManager": "pnpm@10.24.0",
  "imports": {
    "#.storybook/*": [
      "./.storybook/*"
    ],
    "#util/*": "./util/*",
    "#components/*": "components/*",
    "#lib/*": "lib/*"
  },
  "scripts": {
    "tokens": "node scripts/build-tokens.ts",
    "dev": "pnpm tokens && NODE_OPTIONS='--inspect' next dev",
    "analyze": "pnpm tokens && ANALYZE=true next build",
    "build": "pnpm tokens && next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "pnpm tokens",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test-storybook": "vitest --project=storybook"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/bundle-analyzer": "^16.0.7",
    "@next/mdx": "^16.0.7",
    "@next/third-parties": "^16.0.7",
    "@vercel/analytics": "^1.6.1",
    "clsx": "^2.1.1",
    "codehike": "^1.0.7",
    "next": "^16.0.7",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-wrap-balancer": "^1.1.1",
    "recma-codehike": "^0.0.1",
    "remark-codehike": "^0.0.1",
    "remark-gfm": "^4.0.1",
    "seti-icons": "^0.0.4",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-a11y": "^10.1.4",
    "@storybook/addon-docs": "^10.1.4",
    "@storybook/addon-vitest": "^10.1.4",
    "@storybook/nextjs-vite": "^10.1.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "lefthook": "^2.0.8",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "storybook": "^10.1.4",
    "style-dictionary": "^5.1.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
